{
  "id": "joola.io-config-baseline",
  "description": "This is a baseline configuration file for joola.io",
  "moreinfo": "https://github.com/joola/joola.io/wiki",

  "_version": "0.0.1",
  "general": {
    "adminemail": "info@joo.la",
    "dateformat": "YYYY-mm-dd hh:ii:ss",
    "systemname": "joola"
  },
  "interfaces": {
    "webserver": {
      "enabled": true,
      "host": "localhost",
      "port": 8080,
      "securePort": 8081,
      "secure": false,
      "keyFile": null,
      "certFile": null,
      "websocket": {
        "enabled": true
      },
      "sessionDurtaion": 1200000
    },
    "repl": {
      "enabled": true,
      "port": "1337"
    }
  },
  "store": {
    "config": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 0,
        "pass": null
      }
    },
    "dispatch": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 1,
        "pass": null
      }
    },
    "socketio": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 2,
        "pass": null
      }
    },
    "runtime": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 3,
        "pass": null
      }
    },
    "logger": {
      "console": {
        "level": "info"
      },
      "mongo": {
        "level": "trace",
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "logger",
        "options": {
          "capped": true,
          "size": 10240000
        },
        "expireAfterSeconds": 3600
      },
      "file": {
        "level": "trace",
        "path": "/tmp/joola.io/"
      }
    },
    "cache": {
      "mongo": {
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "cache"
      }
    }
  },
  "dispatch": {
    "ttl": 5000,
    "expires": 6
  },
  "workspaces": {
    "root": {
      "roles": {
        "root": {
          "name": "root",
          "permissions": ["access_system", "manage_system", "manage_users", "beacon_insert", "query_fetch"],
          "filter": ""
        },
        "user": {
          "name": "user",
          "permissions": ["access_system"],
          "filter": ""
        }
      },
      "users": {
        "root": {
          "username": "root",
          "_password": "password",
          "_roles": ["root"],
          "displayName": "Administrator",
          "workspace": "root",
          "APIToken": "apitoken-root",
          "su": true
        }
      }
    }
  },
  "authentication": {
    "store": "internal",
    "bypassToken": "123",
    "tokens": {
      "expireAfter": 1200000
    },
    "roles": {
      "admin": {
        "name": "admin",
        "permissions": ["access_system", "manage_system", "manage_users"],
        "filter": ""
      },
      "user": {
        "name": "user",
        "permissions": ["access_system"],
        "filter": ""
      },
      "beacon": {
        "name": "beacon",
        "permissions": ["access_system", "beacon_insert"],
        "filter": ""
      },
      "reader": {
        "name": "reader",
        "permissions": ["access_system", "query_fetch"],
        "filter": ""
      }
    },
    "organizations": {
      "joola": {
        "id": "joola",
        "name": "joola",
        "users": {
          "admin": {
            "username": "admin",
            "_password": "password",
            "_roles": ["admin", "user", "beacon"],
            "displayName": "Administrator",
            "organization": "joola",
            "APIToken": "12345",
            "su": true
          },
          "demo": {
            "username": "demo",
            "_password": "password",
            "_roles": ["user"],
            "displayName": "demo user",
            "organization": "joola"
          },
          "beacon": {
            "username": "beacon",
            "_password": "password",
            "_roles": ["beacon"],
            "displayName": "beacon user",
            "organization": "joola",
            "APIToken": "7890"
          },
          "reader": {
            "username": "reader",
            "_password": "password",
            "_roles": ["reader"],
            "displayName": "reader user",
            "organization": "joola",
            "APIToken": "1234"
          },
          "test": {
            "username": "test",
            "_password": "password",
            "_roles": [],
            "displayName": "test user",
            "organization": "joola",
            "APIToken": "1236"
          }
        }
      }
    }
  }
}
