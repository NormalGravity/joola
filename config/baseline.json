{
  "id": "joola.io-config-baseline",
  "description": "This is a baseline configuration file for joola.io",
  "moreinfo": "https://github.com/joola/joola.io/wiki",

  "_version": "0.0.1",
  "general": {
    "adminemail": "info@joo.la",
    "dateformat": "YYYY-mm-dd hh:ii:ss",
    "systemname": "joola"
  },
  "interfaces": {
    "webserver": {
      "enabled": true,
      "host": "localhost",
      "port": 8080,
      "securePort": 8081,
      "secure": false,
      "keyFile": null,
      "certFile": null,
      "websocket": {
        "enabled": true
      },
      "sessionDurtaion": 1200000,
      "timeout": 15000
    },
    "repl": {
      "enabled": true,
      "port": "1337"
    }
  },
  "store": {
    "config": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 0,
        "pass": null
      }
    },
    "dispatch": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 1,
        "pass": null
      }
    },
    "socketio": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 2,
        "pass": null
      }
    },
    "runtime": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 3,
        "pass": null
      }
    },
    "logger": {
      "console": {
        "level": "info"
      },
      "mongo": {
        "level": "trace",
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "logger",
        "options": {
          "capped": true,
          "size": 10240000
        },
        "expireAfterSeconds": 3600
      },
      "file": {
        "level": "trace",
        "path": "/tmp/joola.io/"
      }
    },
    "cache": {
      "mongo": {
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "cache"
      }
    }
  },
  "dispatch": {
    "expires": 60
  },
  "workspaces": {
    "root": {
      "roles": {
        "root": {
          "key": "root",
          "_permissions": ["access_system", "manage_system", "manage_users", "beacon_insert", "query_fetch"],
          "_filter": ""
        },
        "user": {
          "key": "user",
          "_permissions": ["access_system"],
          "_filter": ""
        }
      },
      "users": {
        "root": {
          "username": "root",
          "_password": "password",
          "_roles": ["root"],
          "displayName": "Administrator",
          "workspace": "root",
          "_APIToken": "apitoken-root",
          "su": true
        }
      }
    }
  },
  "authentication": {
    "store": "internal",
    "bypassToken": "123",
    "tokens": {
      "expireAfter": 1200000
    }
  }
}
