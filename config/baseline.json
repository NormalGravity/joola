{
  "id": "joola.io-config-baseline",
  "description": "This is a baseline configuration file for joola.io",
  "moreinfo": "https://github.com/joola/joola.io/wiki",

  "_version": "0.0.1",
  "general": {
    "adminemail": "info@joo.la",
    "dateformat": "YYYY-mm-dd hh:ii:ss",
    "systemname": "joola"
  },
  "interfaces": {
    "webserver": {
      "enabled": true,
      "host": "localhost",
      "port": 8080,
      "securePort": 8081,
      "secure": false,
      "keyFile": null,
      "certFile": null,
      "websocket": {
        "enabled": true
      },
      "sessionDurtaion": 1200000,
      "timeout": 15000,
      "blacklist": []
    },
    "repl": {
      "enabled": true,
      "port": "1337"
    }
  },
  "store": {
    "config": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 0,
        "pass": null
      }
    },
    "dispatch": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 1,
        "pass": null
      }
    },
    "socketio": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 2,
        "pass": null
      }
    },
    "runtime": {
      "redis": {
        "host": "localhost",
        "port": 6379,
        "db": 3,
        "pass": null
      }
    },
    "logger": {
      "console": {
        "level": "info"
      },
      "mongo": {
        "level": "trace",
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "logger",
        "options": {
          "capped": true,
          "size": 10240000
        },
        "unique": false,
        "expireAfterSeconds": 3600
      },
      "file": {
        "level": "trace",
        "path": "/tmp/joola.io/"
      }
    },
    "messages": {
      "mongo": {
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "dispatch",
        "unique": false
      }
    },
    "cache": {
      "mongo": {
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "cache"
      }
    },
    "cache-second": {
      "mongo": {
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "cache-second"
      }
    },
    "cache-minute": {
      "mongo": {
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "cache-minute"
      }
    },
    "cache-hour": {
      "mongo": {
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "cache-hour"
      }
    },
    "cache-ddate": {
      "mongo": {
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "cache-ddate"
      }
    },
    "cache-month": {
      "mongo": {
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "cache-month"
      }
    },
    "cache-year": {
      "mongo": {
        "host": "localhost",
        "port": 27017,
        "user": null,
        "password": null,
        "db": "cache-year"
      }
    }
  },
  "dispatch": {
    "expires": 60
  },
  "workspaces": {
    "root": {
      "roles": {
        "root": {
          "key": "root",
          "_permissions": ["access_system", "manage_system", "manage_users", "beacon_insert", "query_fetch"],
          "_filter": ""
        },
        "user": {
          "key": "user",
          "_permissions": ["access_system"],
          "_filter": ""
        }
      },
      "users": {
        "root": {
          "username": "root",
          "_password": "password",
          "_roles": ["root"],
          "displayName": "Administrator",
          "workspace": "root",
          "_APIToken": "apitoken-root",
          "su": true
        }
      },
      "collections": {
        "stats-node-count": {
          "key": "stats-node-count",
          "name": "stats-node-count",
          "strongTyped": true,
          "timestamp": {
            "datatype": "date",
            "type": "dimension",
            "name": "timestamp",
            "key": "timestamp"
          },
          "node": {
            "datatype": "string",
            "type": "dimension",
            "name": "node",
            "key": "node"
          },
          "event": {
            "datatype": "string",
            "type": "dimension",
            "name": "event",
            "key": "event"
          },
          "nodes": {
            "datatype": "number",
            "type": "metric",
            "name": "nodes",
            "key": "nodes"
          }
        },
        "stats-token-count": {
          "key": "stats-token-count",
          "name": "stats-token-count",
          "strongTyped": true,
          "timestamp": {
            "datatype": "date",
            "type": "dimension",
            "name": "timestamp",
            "key": "timestamp"
          },
          "node": {
            "datatype": "string",
            "type": "dimension",
            "name": "node",
            "key": "node"
          },
          "event": {
            "datatype": "string",
            "type": "dimension",
            "name": "event",
            "key": "event"
          },
          "tokens": {
            "datatype": "number",
            "type": "metric",
            "name": "tokens",
            "key": "tokens"
          }
        },
        "stats-usage": {
          "key": "stats-usage",
          "name": "stats-usage",
          "strongTyped": true,
          "timestamp": {
            "datatype": "date",
            "type": "dimension",
            "name": "timestamp",
            "key": "timestamp"
          },
          "node": {
            "datatype": "string",
            "type": "dimension",
            "name": "node",
            "key": "node"
          },
          "event": {
            "datatype": "string",
            "type": "dimension",
            "name": "event",
            "key": "event"
          },
          "cpu": {
            "datatype": "number",
            "type": "metric",
            "name": "cpu",
            "key": "cpu"
          },
          "mem": {
            "datatype": "number",
            "type": "metric",
            "name": "mem",
            "key": "mem"
          }
        },
        "stats-events-request": {
          "key": "stats-events-request",
          "name": "stats-events-request",
          "strongTyped": true,
          "stats-events-request": {
            "timestamp": {
              "datatype": "date",
              "type": "dimension",
              "name": "timestamp",
              "key": "timestamp"
            },
            "node": {
              "datatype": "string",
              "type": "dimension",
              "name": "node",
              "key": "node"
            },
            "event": {
              "datatype": "string",
              "type": "dimension",
              "name": "event",
              "key": "event"
            },
            "events": {
              "datatype": "number",
              "type": "metric",
              "name": "events",
              "key": "events"
            }
          }
        },
        "stats-events-fulfilled": {
          "key": "stats-events-fulfilled",
          "name": "stats-events-fulfilled",
          "strongTyped": true,
          "timestamp": {
            "datatype": "date",
            "type": "dimension",
            "name": "timestamp",
            "key": "timestamp"
          },
          "node": {
            "datatype": "string",
            "type": "dimension",
            "name": "node",
            "key": "node"
          },
          "event": {
            "datatype": "string",
            "type": "dimension",
            "name": "event",
            "key": "event"
          },
          "fulfilled": {
            "datatype": "number",
            "type": "metric",
            "name": "fulfilled",
            "key": "fulfilled"
          },
          "fulfilledtime": {
            "datatype": "number",
            "type": "metric",
            "name": "fulfilledtime",
            "key": "fulfilledtime"
          }
        }
      }
    }
  },
  "authentication": {
    "store": "internal",
    "bypassToken": "123",
    "tokens": {
      "expireAfter": 1200000
    }
  }
}
